<UserControl x:Class="PulsarInstaller.Views.InstallOptionsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:PulsarInstaller.Views"
             xmlns:vm="clr-namespace:PulsarInstaller.ViewModels"
             xmlns:base="clr-namespace:PulsarInstaller"
             mc:Ignorable="d" 
             d:DesignHeight="330" d:DesignWidth="600"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=vm:InstallOptionsPageViewModel}">
    <StackPanel>
        <TextBlock Text="Pulsar will be installed to the following location:" />
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Padding="0,1,0,2" Text="{Binding InstallPath, Mode=OneWay}" IsReadOnly="True" />
            <!--<TextBox Grid.Column="0" Padding="0,1,0,2" Text="{Binding InstallPath, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />-->
            <!--<Button Grid.Column="1" Margin="11,0,0,0" Content="Browse..." Width="73" Command="{Binding BrowseFoldersCommand}" />-->
        </Grid>
        
        <TextBlock Text="Select the Pulsar version to install" Margin="0,16,0,0" />
        <CheckBox IsChecked="{Binding InstallNetFramework}" Margin="0,8,0,0">
            .NET Framework 4.8
        </CheckBox>
        <CheckBox IsChecked="{Binding InstallNetCore}" Margin="0,8,0,0">
            .NET 10 (Experimental, improves game performance but may be less stable)
        </CheckBox>

        <TextBlock Text="Additional settings" Margin="0,16,0,0" />
        
        <!--Add To SE Launch Options-->
        <CheckBox IsChecked="{Binding AddLaunchOptions}" Margin="0,8,0,0">
            <TextBlock>
                Add to SE launch options. This will make starting SE in Steam automatically run Pulsar. (Steam will restart)
                <LineBreak />
                Check this option when switching between .NET Framework and .NET 10 versions.
            </TextBlock>
        </CheckBox>

        <!--Desktop Shortcut-->
        <CheckBox IsChecked="{Binding CreateDesktopShortcut}" Margin="0,8,0,0">
            Create desktop shortcut
        </CheckBox>
    </StackPanel>
</UserControl>
